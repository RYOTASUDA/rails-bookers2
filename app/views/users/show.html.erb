<div>
    <h3>User info</h3>
    <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, format: 'jpeg', fallback: "no_image.jpg" %>
    <table>
        <tbody>
            <tr></tr>
            <tr>
                <th>name</th>
                <th></th>
                <th><%= @user.name %></th>
            </tr>
            <tr>
                <th>introduction</th>
                <th></th>
                <th><%= @user.introduction %></th>
            </tr>
        </tbody>
    </table>
</div>
 <% if @user.id == current_user.id %>
    <p><%= link_to "編集", edit_user_path(@user) %></p>
 <% end %>

<h3>New Book</h3>
<%= form_with model: @book, local:true do |f| %>
    <p>Title</p>
    <%= f.text_field :title %>
    <p>Opinion</p>
    <%= f.text_area :body %>
    <%= f.submit 'Create Book' %>
    
<% end %>

<h2>Books</h2>
<% @books.each do |book| %>
<table>
    <thead>
        <tr>
            <td></td>
            <td>Title</td>
            <td>Opinion</td>
            <td></td>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>
                <%= link_to user_path(@user.id) do %>
                    <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, format: 'jpeg', fallback: "no_image.jpg" %>
                <% end %>
            </td>
            <td>
                <%= link_to book_path(book.id) do %>
                    <%= book.title %>
                <% end %>
            </td>
            
            <td><%= book.body %></td>
            <td></td>
        </tr>
    </tbody>
</table>
<% end %>