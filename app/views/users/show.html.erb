<% if flash[:notice] %>
  <p><%= flash[:notice] %></p>
<% end %>

<% if flash[:alert] %>
  <p><%= flash[:alert] %></p>
<% end %>

<div class="row">
    <div class="col-md-3">
        <%= render 'books/list', books: @books, users: @users %>
    </div>
    
    <div class="col-md-8 offset-md-1">

<h2>Books</h2>

<table class="table">
    <thead>
        <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            
        </tr>
    </thead>
    <tbody>
        <% @books.each do |book| %>
        <tr>
            <td>
                <%= link_to user_path(@user.id) do %>
                    <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, format: 'jpeg', fallback: "no_image.jpg", size: '40x40' %>
                <% end %>
            </td>
            <td>
                <%= link_to book_path(book.id) do %>
                    <%= book.title %>
                <% end %>
            </td>
            
            <td><%= book.body %></td>
            
        </tr>
        <% end %>
    </tbody>
</table>