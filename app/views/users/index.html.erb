<div class="row">
  <div class="col-md-3">
    <%= render 'books/list', books: @books, users: @users %>
  </div>
  <div class="col-md-8 offset-md-1">
    <h3>Users</h3>
    <table class="table">
      <thead>
        <tr>
          <th scope="col"></th>
          <th scope="col">image</th>
          <th scope="col">name</th>
        </tr>
      </thead>
      <tbody>
            <% @users.each do |user| %>
                <tr>
                    <td><%= attachment_image_tag @user, :profile_image, :fill, 60, 60, format: 'jpeg', fallback: "no_image.jpg", size: '40x40' %></td>
                    <td><%= user.name %></td>
                    <td><%= link_to "Show", user_path(@user) %></td>
                    <td></td>
                </tr>
            <% end %>
        </tbody>
      </tbody>
    </table>
  </div>
</div>