<h3>New Book</h3>
<%= form_with model: @book, local:true do |f| %>
    <p>Title</p>
    <%= f.text_field :title %>
    <p>Opinion</p>
    <%= f.text_area :opinion %>
    <%= f.submit 'Create Book' %>
<% end %>
