<% if flash[:notice] %>
  <p><%= flash[:notice] %></p>
<% end %>

<div class="row">
    <div class="col-md-3">
        <%= render 'books/list', books: @books, users: @users %>
    </div>
    
    <div class="col-md-8 offset-md-1">
        <h1>Book detail</h1>
        <table class="table">
            <tbody>
                <tr>
                    <td>
                        <%= link_to user_path(@user.id) do %>
                            <%= attachment_image_tag(@book.user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg", size: '40x40') %>
                        <% end %>
                        <br>
                            <%= link_to user_path(@user.id) do %>
                                <%= @book.user.name %>
                            <% end %>   
                        </br>
                        
                    </td>
                    <td><%= @book.title %></td>
                    <td><%= @book.body %></td>
                    <td></td>
                    <td><%= link_to "Edit", book_path(@book) %></td>
                    <td><%= link_to "Delete", book_path(@book), method: :delete %></td>
                </tr>
            </tbody>
        </table>
    </div>
</div>