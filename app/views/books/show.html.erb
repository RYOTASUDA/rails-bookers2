                <a><%= attachment_image_tag image.user, :image, :fill, 60, 60, fallback: "no_image.jpg" %>
                <br><%= @book.user.name %></br>
                </a>
            </td>
            <td><%= book.title %></td>
            <td><%= book.body %></td>
            <td></td>
