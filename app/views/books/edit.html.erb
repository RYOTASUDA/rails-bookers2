<% if flash[:notice] %>
  <p><%= flash[:notice] %></p>
<% end %>

<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h1>Editing Book</h1>
      <%= form_with model:@book, url:"/books/#{@book.id}", local:true do |f| %>
      <% if @book.errors.any? %>
          <%= @book.errors.count %>errors prohibited this obj from being saved:<br>
            <ul>
              <% @book.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul> 
          <% end %>
        <p>Title</p>
        <%= f.text_field :title %>
        <p>Body</p>
        <%= f.text_area :body %>
        <%= f.submit 'Update Book' %>
        <%= link_to "Show", book_path(@book.id) %>
        <%= link_to "Back", books_path %>
      <% end %>
    </div>
  </div>
</div>
